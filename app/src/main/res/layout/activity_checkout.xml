<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="10">
    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/milk"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:textColor="#000"
              android:fontFamily="@font/six"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heritage Toned Milk"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                   android:fontFamily="@font/six"
                    android:textColor="#c6c5c5"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500ml"/>
                <LinearLayout
                    android:weightSum="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/incrementshape"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal">


                    <Button
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textColor="#009DFC"
                        android:background="@null"
                        android:id="@+id/checkdecrement"
                        android:textStyle="bold"
                        android:text="â€”"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        android:id="@+id/checkadd"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textColor="#009DFC"
                        android:background="@null"
                        android:id="@+id/checkincrement"
                        android:textStyle="bold"
                        android:text="+"/>

                </LinearLayout>







            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView

                android:textColor="#009DFC"
                android:textSize="18dp"
                android:id="@+id/t1"
                android:fontFamily="@font/six"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.00"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <View

        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"

        android:background="#898787" />

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
         android:fontFamily="@font/six"

            android:textSize="15dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subtotal"/>

            <TextView

                android:layout_weight="0.2"
                android:id="@+id/t2"
                android:textSize="15dp"
                android:fontFamily="@font/six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="25.00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/six"

            android:textSize="15dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Taxes &amp; Charges"/>

        <TextView

            android:layout_weight="0.2"
            android:id="@+id/t3"
            android:textSize="15dp"
            android:fontFamily="@font/six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"/>



    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/six"

            android:textSize="15dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delivery fee"/>

        <TextView

            android:layout_weight="0.2"
            android:id="@+id/t4"
            android:textSize="15dp"
            android:fontFamily="@font/six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"/>



    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/six"

            android:textSize="20dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Amount"/>

        <TextView

            android:layout_weight="0.2"
            android:id="@+id/t6"
            android:textSize="20dp"
            android:fontFamily="@font/six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="25.00"/>



    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layoutshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/six"
                android:textSize="17dp"
                android:drawableLeft="@drawable/location24"
                  android:padding="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Miyapur Hmt Colony Hyderabad"/>

            <TextView
                android:id="@+id/change"
                android:fontFamily="@font/six"
                android:textColor="#009DFC"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE"/>
            </LinearLayout>
            <Button
                android:fontFamily="@font/six"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textAllCaps="false"
                android:background="@drawable/greenbackground"
                android:id="@+id/pay"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Proceed To Pay"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
</LinearLayout>

