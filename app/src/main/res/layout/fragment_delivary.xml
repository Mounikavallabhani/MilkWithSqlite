<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:fontFamily="@font/six"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center|end"
            android:layout_marginRight="20dp"
            android:text="From date :"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/vstartdate"
            android:background="@drawable/textshape"
            android:layout_marginRight="15dp"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/vstartdatetext"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cal16"
                android:drawablePadding="10dp"
                android:hint="DD-MM-YYYY"
                android:fontFamily="@font/six"
                android:paddingLeft="20dp"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:fontFamily="@font/six"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:layout_marginRight="20dp"
            android:layout_weight="0.4"
            android:text="To date :"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/venddate"
            android:background="@drawable/textshape"
            android:layout_marginRight="15dp"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/venddatetext"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cal16"
                android:drawablePadding="10dp"
                android:fontFamily="@font/six"
                android:hint="DD-MM-YYYY"
                android:paddingLeft="20dp"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:textSize="15dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/six"
        android:background="#207F12"
        android:id="@+id/vbutton"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"

        android:text="Set Vacation period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>